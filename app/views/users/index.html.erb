<br>
<h2>All members</h2>

<br>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</td>
      <th scope="col">Website</td>
      <th scope="col">Short link</td>
      <th scope="col">Friends</td>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><%= u.name %></td>
        <td><%= u.website %></td>
        <td><%= link_to "geerup.com/#{u.slug}", "http://www.geerup.com/#{u.slug}", :target => "_blank" %></td>
        <td><%= u.friends.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

